<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#4D04C3"
              android:orientation="vertical"
              tools:context=".Registration.Registration">

  <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="12dp"
          android:orientation="vertical">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ellipse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/digital_canteen"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

      <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:orientation="vertical">

        <EditText
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/white_curve"
                android:backgroundTint="@color/appBlack"
                android:fontFamily="@font/poppinslight"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLength="60"
                android:paddingLeft="20dp"
                android:textColor="#ffff"
                android:textColorHint="#ffff"/>

        <EditText
                android:id="@+id/Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_curve"
                android:backgroundTint="@color/appBlack"
                android:fontFamily="@font/poppinslight"
                android:hint="@string/password"
                android:inputType="text"
                android:maxLength="18"
                android:paddingLeft="20dp"
                android:textColor="#ffff"
                android:textColorHint="#ffff"/>

        <EditText
                android:id="@+id/Fullname"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_curve"
                android:backgroundTint="@color/appBlack"
                android:fontFamily="@font/poppinslight"
                android:hint="@string/full_name"
                android:inputType="text"
                android:maxLength="60"
                android:paddingLeft="20dp"
                android:textColor="#ffff"
                android:textColorHint="#ffff"/>

        <EditText
                android:id="@+id/Phone"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:background="@drawable/white_curve"
                android:backgroundTint="@color/appBlack"
                android:fontFamily="@font/poppinslight"
                android:hint="@string/phone"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingLeft="20dp"
                android:textColor="#ffff"
                android:textColorHint="#ffff"/>
        <EditText
            android:id="@+id/Shopname"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/white_curve"
            android:backgroundTint="@color/appBlack"
            android:fontFamily="@font/poppinslight"
            android:hint="@string/shop_name"
            android:inputType="text"
            android:maxLength="60"
            android:paddingLeft="20dp"
            android:textColor="#ffff"
            android:textColorHint="#ffff"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

          <EditText
              android:id="@+id/DocumentName"
              android:layout_width="233dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/white_curve"
              android:backgroundTint="@color/appBlack"
              android:fontFamily="@font/poppinslight"
              android:hint="@string/doc_proof"
              android:maxLength="60"
              android:paddingLeft="20dp"
              android:paddingTop="10dp"
              android:textColor="#ffff"
              android:textColorHint="#ffff"
              android:textSize="18dp" />

          <Button
              android:id="@+id/UploadDocument"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="1dp"
              android:background="@drawable/button_background"
              android:drawableStart="@drawable/file_upload"
              android:paddingLeft="26dp"

          android:textColor="@color/appBlack" />



        </LinearLayout>


        <Button
                android:id="@+id/signup"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_background"
                android:text="@string/signup"
                android:textStyle="bold"
                android:textColor="@color/appBlack"/>
      </LinearLayout>

      <ProgressBar
              android:id="@+id/progressBarReg"
              style="?android:attr/progressBarStyle"
              android:layout_width="112dp"
              android:layout_height="89dp"
              android:layout_gravity="center_horizontal|center_vertical"
              android:indeterminateTint="@color/yellow"/>

    </FrameLayout>
  </LinearLayout>


</LinearLayout>