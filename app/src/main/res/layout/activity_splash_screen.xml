<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D04C3"
    android:orientation="vertical">

  <!-- Top logo -->


  <ImageView
      android:layout_width="191dp"
      android:layout_height="146dp"
      android:layout_gravity="center"
      android:layout_marginTop="50dp"
      android:layout_marginBottom="0dp"
      android:src="@drawable/restau"
      android:tint="@color/yellow" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/LogoSplash"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        android:src="@mipmap/ellipse" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/mochiyepopone"
        android:shadowColor="@color/white"
        android:text="Enjoy"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="30sp"
        android:layout_marginBottom="0dp" /> <!-- Add margin for gap -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/mochiyepopone"
        android:shadowColor="@color/white"
        android:text="Your Meal!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="50dp" /> <!-- Add margin for gap -->

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:stateListAnimator="@null"
        android:text="Get Started"
        android:drawableRight="@drawable/forward_arrow"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="left"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/mochiyepopone"
        android:shadowColor="@color/white"
        android:text="Powered by ZCOER ❤️"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />




    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/top_logo" />

  </LinearLayout>

</LinearLayout>
